generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  admin
  user
}

model User {
  id             Int      @id @default(autoincrement())
  companyName    String   @unique
  username       String   @unique
  companyAddress String
  contactNumber  String
  contactPerson  String
  email          String   @unique
  password       String
  role           UserRole @default(user)
  createdAt      DateTime @default(now())
  UpdateAt       DateTime @updatedAt
}

model FeaturesContent {
  id          Int      @id @default(autoincrement())
  contentName String
  content     String
  createdAt   DateTime @default(now())
  UpdateAt    DateTime @updatedAt
}

model LandingpagehomeContent {
  id          Int      @id @default(autoincrement())
  contentName String
  content     String
  createdAt   DateTime @default(now())
  UpdateAt    DateTime @updatedAt
}

model LandingpageImages {
  id        Int      @id @default(autoincrement())
  Image     String
  createdAt DateTime @default(now())
  UpdateAt  DateTime @updatedAt
}

model LandingpageCards {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  Image     String
  createdAt DateTime @default(now())
  UpdateAt  DateTime @updatedAt
}

enum Status {
  checkmark
  crossmark
}

model PricingTable {
  id        Int      @id @default(autoincrement())
  title     String
  standard  Status
  premium   Status
  starter   Status
  createdAt DateTime @default(now())
  UpdateAt  DateTime @updatedAt
}

model PricingCards {
  id        Int      @id @default(autoincrement())
  title     String
  subtitle  String
  price     Int
  subtitle2 String
  price2    Int
  packageone  String
  packagetwo  String
  packagethree  String
  packagefour  String
  packagefive  String
  createdAt DateTime @default(now())
  UpdateAt  DateTime @updatedAt
}
